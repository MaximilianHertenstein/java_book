FROM ubuntu:25.10

# Install Java 25, Python3, pip, and basic tools
RUN apt-get update && \
    apt-get install -y \
        openjdk-25-jdk \
        python3 \
        python3-pip \
        git \
        curl \
        unzip \
        && rm -rf /var/lib/apt/lists/*

# Set JAVA_HOME and PATH
ENV JAVA_HOME=/usr/lib/jvm/java-25-openjdk-amd64
ENV PATH="$JAVA_HOME/bin:$PATH"

# Install Python packages
RUN pip3 install jjava ipython ipykernel thebe
